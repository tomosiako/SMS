<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_school_parent_tree" model="ir.ui.view">
        <field name="name">school.parent.tree</field>
        <field name="model">school.parent</field>
        <field name="arch" type="xml">
            <tree string="Parents">
                <field name="parent_name"/>
                <field name="gender" optional="hide"/>
                <field name="phone_number" optional="hide"/>
                <field name="parent_email" optional="hide"/>
                <field name="parent_student" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_school_parent_form" model="ir.ui.view">
        <field name="name">school.parent.form</field>
        <field name="model">school.parent</field>
        <field name="arch" type="xml">
            <form string="Parents">
                <sheet>
                    <group>
                        <group>
                            <field name="parent_name"/>
                            <field name="gender"/>
                            <field name="phone_number"/>
                        </group>
                        <group>
                            <field name="parent_email"/>
                            <field name="parent_student"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_school_parent" model="ir.actions.act_window">
        <field name="name">Parent</field>
        <field name="res_model">school.parent</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Parent
            </p>
        </field>
    </record>
</odoo>